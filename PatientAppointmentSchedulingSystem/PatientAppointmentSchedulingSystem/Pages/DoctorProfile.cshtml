@page
@model PatientAppointmentSchedulingSystem.Pages.DoctorProfileModel
@{
    Layout = "_DoctorLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> Welcome to MediBook </title>


    <!-- ======= Google Font =======-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&amp;display=swap" rel="stylesheet">
    <!-- End Google Font-->
    <!-- ======= Styles =======-->
    <link href="/vendors/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="/vendors/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="/vendors/glightbox/glightbox.min.css" rel="stylesheet">
    <link href="/vendors/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="/vendors/aos/aos.css" rel="stylesheet">
    <!-- End Styles-->
    <!-- ======= Theme Style =======-->
    <link href="/css/style.css" rel="stylesheet">
    <!-- End Theme Style-->
    <!-- ======= Apply theme =======-->
    <script>
        // Apply the theme as early as possible to avoid flicker
        (function () {
            const storedTheme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-bs-theme', storedTheme);
        })();
    </script>
</head>
<body>
    <!-- ======= Site Wrap =======-->
    <div class="site-wrap">
        <!-- ======= Main =======-->
        <main>
            <section class="hero__v6 section" id="home" style="padding:100px 0 0 0 !important">
                <!-- ======= Everything Start from HERE!! =======-->
                <div class="container">
                    <div class="content-wrapper">
                        @if (TempData["AlertMsg"] != null)
                        {
                            <script>
                                alert("@TempData["AlertMsg"]");
                            </script>
                        }
                        <!-- Main Content -->
                        <div class="container">
                            <section class="py-4">
                                <div class="container" style="max-width:1100px;">
                                    <div class="card shadow-sm border rounded-3 mb-4">
                                        <div class="card-body d-flex align-items-center justify-content-between">
                                            <div class="d-flex align-items-center gap-3">
                                                <div class="rounded-circle d-flex align-items-center justify-content-center"
                                                     style="width:64px;height:64px;background:linear-gradient(135deg, var(--bs-primary), #6f42c1);">
                                                    <i class="bi bi-person text-white fs-3"></i>
                                                </div>
                                                <div>
                                                    <h1 class="h4 mb-1">@Model.DoctorDetails.DoctorFullName</h1>
                                                    <div class="text-muted small">Doctor ID: @Model.DoctorDetails.DoctorId</div>
                                                </div>
                                            </div>
                                            @* <div class="text-muted small">Last updated: @Model.LastUpdated?.ToString("yyyy-MM-dd")</div> *@
                                        </div>
                                    </div>

                                    <form method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                                        <input type="hidden" asp-for="DoctorDetails.DoctorId" />

                                        <div class="row g-4">
                                            <!-- Personal -->
                                            <div class="col-12">
                                                <div class="card border h-100">
                                                    <div class="card-body">
                                                        <h3 class="h6 mb-3"><i class="bi bi-person-fill me-2"></i>Personal Information</h3>

                                                        <div class="row g-3">
                                                            <div class="col-12">
                                                                <label asp-for="DoctorDetails.DoctorFullName" class="form-label" style="font-weight:bold">Name <span class="text-danger field-input d-none">*</span></label>
                                                                <h6 asp-for="DoctorDetails.DoctorFullName" class="form-label field-label margin-left-20">@Model.DoctorDetails.DoctorFullName</h6>
                                                                <input asp-for="DoctorDetails.DoctorFullName" class="form-control field-input d-none" />
                                                                <span asp-validation-for="DoctorDetails.DoctorFullName" class="text-danger small"></span>
                                                            </div>
                                                            <div class="col-12">
                                                                <label asp-for="DoctorDetails.DoctorProviderName" class="form-label" style="font-weight:bold">Provider Name <span class="text-danger field-input d-none">*</span></label>
                                                                <h6 asp-for="DoctorDetails.DoctorProviderName" class="form-label field-label margin-left-20">@Model.DoctorDetails.DoctorProviderName</h6>
                                                                <input asp-for="DoctorDetails.DoctorProviderName" type="date" class="form-control field-input d-none" />
                                                                <span asp-validation-for="DoctorDetails.DoctorProviderName" class="text-danger small"></span>
                                                            </div>
                                                            <div class="col-12">
                                                                <label asp-for="DoctorDetails.DoctorSpecialtyName" class="form-label" style="font-weight:bold">Specialty <span class="text-danger field-input d-none">*</span></label>
                                                                <h6 asp-for="DoctorDetails.DoctorSpecialtyName" class="form-label field-label margin-left-20">@Model.DoctorDetails.DoctorSpecialtyName</h6>
                                                                <input asp-for="DoctorDetails.DoctorSpecialtyName" type="date" class="form-control field-input d-none" />
                                                                <span asp-validation-for="DoctorDetails.DoctorSpecialtyName" class="text-danger small"></span>
                                                            </div>
                                                            <div class="col-12">
                                                                <label asp-for="DoctorDetails.DoctorRoomNum" class="form-label" style="font-weight:bold">Room Number <span class="text-danger field-input d-none">*</span></label>
                                                                <h6 asp-for="DoctorDetails.DoctorRoomNum" class="form-label field-label margin-left-20">@Model.DoctorDetails.DoctorRoomNum</h6>
                                                                <input asp-for="DoctorDetails.DoctorRoomNum" type="date" class="form-control field-input d-none" />
                                                                <span asp-validation-for="DoctorDetails.DoctorRoomNum" class="text-danger small"></span>
                                                            </div>
                                                            <div class="col-12">
                                                                <label asp-for="DoctorDetails.DoctorLanguageSpoken" class="form-label" style="font-weight:bold">Language Spoken <span class="text-danger field-input d-none">*</span></label>
                                                                <h6 asp-for="DoctorDetails.DoctorLanguageSpoken" class="form-label field-label margin-left-20">@Model.DoctorDetails.DoctorLanguageSpoken</h6>
                                                                <input asp-for="DoctorDetails.DoctorLanguageSpoken" type="date" class="form-control field-input d-none" />
                                                                <span asp-validation-for="DoctorDetails.DoctorLanguageSpoken" class="text-danger small"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Contact -->
                                            <div class="col-12">
                                                <div class="card border h-100">
                                                    <div class="card-body">
                                                        <h3 class="h6 mb-3"><i class="bi bi-envelope-fill me-2"></i>Contact Information</h3>

                                                        <div class="mb-3">
                                                            <label asp-for="DoctorDetails.DoctorEmail" class="form-label" style="font-weight:bold">Email <span class="text-danger field-input d-none">*</span></label>
                                                            <h6 asp-for="DoctorDetails.DoctorEmail" class="form-label field-label margin-left-20">@Model.DoctorDetails.DoctorEmail</h6>
                                                            <input asp-for="DoctorDetails.DoctorEmail" type="email" class="form-control field-input d-none" />
                                                            <span asp-validation-for="DoctorDetails.DoctorEmail" class="text-danger small"></span>
                                                        </div>

                                                        <div>
                                                            <label asp-for="DoctorDetails.DoctorPhoneNum" class="form-label" style="font-weight:bold">Phone <span class="text-danger field-input d-none">*</span></label>
                                                            <h6 asp-for="DoctorDetails.DoctorPhoneNum" class="form-label field-label margin-left-20">@Model.DoctorDetails.DoctorPhoneNum</h6>
                                                            <input asp-for="DoctorDetails.DoctorPhoneNum" type="tel" inputmode="tel" class="form-control field-input d-none" />
                                                            <span asp-validation-for="DoctorDetails.DoctorPhoneNum" class="text-danger small"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </form>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
                <!-- End Hero-->
            </section>
            <!-- End Hero-->
        </main>
    </div>

    <!-- ======= Back to Top =======-->
    <button id="back-to-top"><i class="bi bi-arrow-up-short"></i></button>
    <!-- End Back to top-->
    <!-- ======= Javascripts =======-->
    <script src="/vendors/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="/vendors/gsap/gsap.min.js"></script>
    <script src="/vendors/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="/vendors/isotope/isotope.pkgd.min.js"></script>
    <script src="/vendors/glightbox/glightbox.min.js"></script>
    <script src="/vendors/swiper/swiper-bundle.min.js"></script>
    <script src="/vendors/aos/aos.js"></script>
    <script src="/vendors/purecounter/purecounter.js"></script>
    <script src="/js/custom.js"></script>
    <script src="/js/send_email.js"></script>
</body>
</html>
