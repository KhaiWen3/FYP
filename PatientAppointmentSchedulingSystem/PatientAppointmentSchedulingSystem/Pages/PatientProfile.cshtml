                                                                    <input asp-for="PatientDetails.DateOfBirth" type="date" class="form-control field-input d-none" />
                                                                    <span asp-validation-for="PatientDetails.DateOfBirth" class="text-danger small"></span>
                                                                </div>
                                                                <div class="col-12">
                                                                    <label asp-for="PatientDetails.Gender" class="form-label" style="font-weight:bold">Gender <span class="text-danger field-input d-none">*</span></label>
                                                                    <h6 asp-for="PatientDetails.Gender" class="form-label field-label margin-left-20">@Model.PatientDetails.Gender</h6>
                                                                    <select asp-for="PatientDetails.Gender" class="form-select field-input d-none">
                                                                            <option value="">Select Gender</option>
                                                                            <option>Male</option>
                                                                            <option>Female</option>
                                                                            <option>Other</option>
                                                                            <option>Prefer not to say</option>
                                                                    </select>
                                                                    <span asp-validation-for="PatientDetails.Gender" class="text-danger small"></span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Contact -->
