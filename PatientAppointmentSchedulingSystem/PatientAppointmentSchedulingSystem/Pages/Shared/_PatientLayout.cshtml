<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Welcome to MediBook</title>

    <!-- ======= Google Font =======-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&amp;display=swap" rel="stylesheet">
    <!-- End Google Font-->
    <!-- ======= Styles =======-->
    <link href="/vendors/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="/vendors/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="/vendors/glightbox/glightbox.min.css" rel="stylesheet">
    <link href="/vendors/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="/vendors/aos/aos.css" rel="stylesheet">
    <!-- End Styles-->

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- ======= Theme Style =======-->
    <link href="/css/patient.css" rel="stylesheet">
    <!-- End Theme Style-->
</head>
<body>
    <!-- ======= Header =======-->
    <header class="fbs__net-navbar navbar navbar-expand-lg dark" aria-label="freebootstrap.net navbar">
        <div class="container d-flex align-items-center justify-content-between">

            <!-- Start Logo-->
            <a class="navbar-brand w-auto" href="/PatientHomePage">
                <!-- logo dark--><img class="logo dark img-fluid" height="40" width="300" src="/images/medibook.svg" alt="FreeBootstrap.net image placeholder">
            </a>
            <!-- End Logo-->
            <!-- Start offcanvas-->
            <div class="offcanvas offcanvas-start w-75" id="fbs__net-navbars" tabindex="-1" aria-labelledby="fbs__net-navbarsLabel">

                <div class="offcanvas-header">
                    <div class="offcanvas-header-logo">
                        <a class="logo-link" id="fbs__net-navbarsLabel" href="/PatientHomePage">
                            <!-- logo dark -->
                            <img class="logo dark svg-fluid" height="40" width="300" src="/images/medibook.svg" alt="FreeBootstrap.net image placeholder" />
                        </a>
                    </div>
                    <button class="btn-close btn-close-black" type="button" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>

                <div class="offcanvas-body d-flex justify-content-center">
                    <ul class="navbar-nav nav d-flex flex-row gap-4">
                        <li class="nav-item"><a class="nav-link @(IsActive("/PatientHomePage") ? "active" : "")" href="/PatientHomePage">Home</a></li>
                        <li class="nav-item"><a asp-page="/PatientViewAppointment" class="nav-link @(IsActive("/PatientViewAppointment") ? "active" : "")">My Appointment</a></li>
                        @* <li class="nav-item"><a asp-page="/DoctorPatientList" class="nav-link @(IsActive("/DoctorPatientList") ? "active" : "")">Patients</a></li> *@
                    </ul>

                    @* <ul class="navbar-nav nav d-flex flex-row gap-4">
                        <li class="nav-item"><a class="nav-link scroll-link active" aria-current="page" href="/PatientHomePage">Home</a></li>
                        <li class="nav-item"><a class="nav-link scroll-link" aria-current="page" href="/PatientViewAppointment">My Appointment</a></li>
                        <li class="nav-item"><a class="nav-link scroll-link" href="/PatientProfile">Profile</a></li>
                    </ul> *@
                </div>
            </div>

            <a class="navbar-brand w-auto" href="/PatientProfile">
                <img style="width:30px !important;height:auto !important;" src="/images/logo/user.png" alt="Profile" />
            </a>

            <a class="navbar-brand w-auto" style="margin-left:30px;" href="/">
                <img style="width:30px !important;height:auto !important;" src="/images/logo/exit.png" alt="Exit" />
            </a>
            <!-- End offcanvas-->
        </div>
    </header>
    <!-- End Header-->

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- ======= Footer =======-->
    <footer class="bg-primary text-light pt-5 pb-4">
        <div class="container text-center text-md-start">
            <div class="row">
                <!-- About -->
                <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                    <h5 class="text-uppercase fw-bold mb-4">MediBook</h5>
                    <p>Your trusted platform to search doctors, book appointments, and manage your healthcare effortlessly.</p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                    <h6 class="text-uppercase fw-bold mb-4">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a href="#home" class="text-light text-decoration-none">Home</a></li>
                        <li><a href="#services" class="text-light text-decoration-none">Services</a></li>
                        <li><a href="#how-it-works" class="text-light text-decoration-none">How It Works</a></li>
                        <li><a href="#about" class="text-light text-decoration-none">About</a></li>
                    </ul>
                </div>

                <!-- Contact -->
                <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                    <h6 class="text-uppercase fw-bold mb-4">Contact</h6>
                    <p>Email: support@medibook.com</p>
                    <p>Phone: +60 12-345 6789</p>
                    <p>Location: Kampar, Perak, Malaysia</p>
                </div>

                <!-- Join Us -->
                <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-4">
                    <h6 class="text-uppercase fw-bold mb-4">Join Us</h6>
                    <p>Are you a hospital or clinic? <a href="/DoctorProviderPath" style="color:#fff; text-decoration:underline;"> Register </a>with us to be part of the MediBook network.</p>
                    @* <a href="/ProviderLogin" class="btn btn-primary py-2">Join Us</a> *@
                </div>
            </div>

            <!-- Copyright -->
            <div class="text-center pt-3 border-top border-light mt-4">
                <p class="mb-0">&copy; 2025 MediBook. All Rights Reserved.</p>
            </div>
        </div>
    </footer>
    <!-- End Footer-->

    <!-- ======= Back to Top =======-->
    <button id="back-to-top"><i class="bi bi-arrow-up-short"></i></button>
    <!-- End Back to top-->
    <!-- ======= Javascripts =======-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="/vendors/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="/vendors/gsap/gsap.min.js"></script>
    <script src="/vendors/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="/vendors/isotope/isotope.pkgd.min.js"></script>
    <script src="/vendors/glightbox/glightbox.min.js"></script>
    <script src="/vendors/swiper/swiper-bundle.min.js"></script>
    <script src="/vendors/aos/aos.js"></script>
    <script src="/vendors/purecounter/purecounter.js"></script>
    <script src="/js/custom.js"></script>
    <script src="/js/send_email.js"></script>
    <!-- End JavaScripts-->

    @await RenderSectionAsync("Scripts", required: false)
    @functions {
        public bool IsActive(string href)
        {
            var path = Context?.Request?.Path.Value ?? "";
            return string.Equals(path, href, StringComparison.OrdinalIgnoreCase);
        }
    }
</body>
</html>