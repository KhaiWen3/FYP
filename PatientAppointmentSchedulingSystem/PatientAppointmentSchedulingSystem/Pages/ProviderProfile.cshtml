@page
@model PatientAppointmentSchedulingSystem.Pages.ProviderProfileModel
@{
    Layout = "_ProviderLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Welcome to MediBook</title>

    <!-- ======= Google Font =======-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&amp;display=swap" rel="stylesheet">
    <!-- End Google Font-->
    <!-- ======= Styles =======-->
    <link href="/vendors/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="/vendors/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="/vendors/glightbox/glightbox.min.css" rel="stylesheet">
    <link href="/vendors/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="/vendors/aos/aos.css" rel="stylesheet">
    <!-- End Styles-->
    <!-- ======= Theme Style =======-->
    <link href="/css/provider.css" rel="stylesheet">
    <!-- End Theme Style-->
    <!-- ======= Apply theme =======-->
    <script>
        // Apply the theme as early as possible to avoid flicker
        (function () {
            const storedTheme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-bs-theme', storedTheme);
        })();
    </script>
</head>
<body>
    <!-- ======= Site Wrap =======-->
    <div class="site-wrap">
        <!-- ======= Main =======-->
        <main>

            <section class="hero__v6 section" id="home" style="padding:70px 0 0 0 !important">
                <!-- ======= Everything Start from HERE!! =======-->
                @* <main> *@

                <div class="container">
                    <div class="content-wrapper">


                        <!-- Main Content -->
                        <div class="container">
                            <section class="py-4">
                                <div class="container" style="max-width:1100px;">
                                    <div class="card shadow-sm border rounded-3 mb-4">
                                        <div class="card-body d-flex align-items-center justify-content-between">
                                            <div class="d-flex align-items-center gap-3">
                                                <div class="rounded-circle d-flex align-items-center justify-content-center"
                                                     style="width:64px;height:64px;background:linear-gradient(135deg, var(--bs-primary), #6f42c1);">
                                                    <i class="bi bi-person text-white fs-3"></i>
                                                </div>
                                                <div>
                                                    <h1 class="h4 mb-1">@Model.ProviderDetails.Name</h1>
                                                    <div class="text-muted small">Provider ID: @Model.ProviderDetails.ProviderId</div>
                                                </div>
                                            </div>
                                            @* <div class="text-muted small">Last updated: @Model.LastUpdated?.ToString("yyyy-MM-dd")</div> *@
                                        </div>
                                    </div>

                                    <form method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                                        <input type="hidden" asp-for="ProviderDetails.ProviderId" />

                                        <div class="row g-4">
                                            <!-- Personal -->
                                            <div class="col-12">
                                                <div class="card border h-100">
                                                    <div class="card-body">
                                                        <h3 class="h6 mb-3"><i class="bi bi-person-fill me-2"></i>Provider Information</h3>

                                                        <div class="row g-3">
                                                            <div class="col-md-6">
                                                                <label asp-for="ProviderDetails.Name" class="form-label" style="font-weight:bold">Provider Name <span class="text-danger field-input d-none">*</span></label>
                                                                <h6 asp-for="ProviderDetails.Name" class="form-label field-label margin-left-20">@Model.ProviderDetails.Name</h6>
                                                                <input asp-for="ProviderDetails.Name" class="form-control field-input d-none" />
                                                                <span asp-validation-for="ProviderDetails.Name" class="text-danger small"></span>
                                                            </div>
                                                            <div class="col-12">
                                                                <label asp-for="ProviderDetails.ProviderType" class="form-label" style="font-weight:bold">Provider Type <span class="text-danger  field-input d-none">*</span></label>
                                                                <h6 asp-for="ProviderDetails.ProviderType" class="form-label field-label margin-left-20">@Model.ProviderDetails.ProviderType</h6>
                                                                <select asp-for="ProviderDetails.ProviderType" class="form-select field-input d-none">
                                                                    <option value="">-- Select --</option>
                                                                    <option value="Hospital">Hospital</option>
                                                                    <option value="Clinic">Clinic</option>
                                                                </select>
                                                                <span asp-validation-for="ProviderDetails.ProviderType" class="text-danger small"></span>
                                                            </div>
                                                            <div class="col-12">
                                                                <label asp-for="ProviderDetails.OwnershipType" class="form-label" style="font-weight:bold">Ownership Type <span class="text-danger field-input d-none">*</span></label>
                                                                <h6 asp-for="ProviderDetails.OwnershipType" class="form-label field-label margin-left-20">@Model.ProviderDetails.OwnershipType</h6>
                                                                <select asp-for="ProviderDetails.OwnershipType" class="form-select field-input d-none">
                                                                    <option value="">-- Select --</option>
                                                                    <option value="Private">Private</option>
                                                                    <option value="Public">Public</option>
                                                                    <option value="Government">Government</option>
                                                                </select>
                                                                <span asp-validation-for="ProviderDetails.OwnershipType" class="text-danger small"></span>
                                                            </div>
                                                            <div class="col-12">
                                                                <label asp-for="ProviderDetails.BedCount" class="form-label" style="font-weight:bold">Bed Count <span class="text-danger  field-input d-none">*</span></label>
                                                                <h6 asp-for="ProviderDetails.BedCount" class="form-label field-label margin-left-20">@Model.ProviderDetails.BedCount</h6>
                                                                <input asp-for="ProviderDetails.BedCount" class="form-control field-input d-none" />
                                                                <span asp-validation-for="ProviderDetails.BedCount" class="text-danger small"></span>
                                                            </div>
                                                            <div class="col-12">
                                                                <label asp-for="ProviderDetails.Description" class="form-label" style="font-weight:bold">Description <span class="text-danger field-input d-none">*</span></label>
                                                                <h6 asp-for="ProviderDetails.Description" class="form-label field-label margin-left-20">@Model.ProviderDetails.Description</h6>
                                                                <input asp-for="ProviderDetails.Description" class="form-control field-input d-none" />
                                                                <span asp-validation-for="ProviderDetails.Description" class="text-danger small"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Contact -->
                                            <div class="col-12">
                                                <div class="card border h-100">
                                                    <div class="card-body">
                                                        <h3 class="h6 mb-3"><i class="bi bi-envelope-fill me-2"></i>Contact Information</h3>

                                                        <div class="mb-3">
                                                            <label asp-for="ProviderDetails.Email" class="form-label" style="font-weight:bold">Email <span class="text-danger field-input d-none">*</span></label>
                                                            <h6 asp-for="ProviderDetails.Email" class="form-label field-label margin-left-20">@Model.ProviderDetails.Email</h6>
                                                            <input asp-for="ProviderDetails.Email" type="email" class="form-control field-input d-none" />
                                                            <span asp-validation-for="ProviderDetails.Email" class="text-danger small"></span>
                                                        </div>

                                                        <div>
                                                            <label asp-for="ProviderDetails.ContactNum" class="form-label" style="font-weight:bold">Phone <span class="text-danger field-input d-none">*</span></label>
                                                            <h6 asp-for="ProviderDetails.ContactNum" class="form-label field-label margin-left-20">@Model.ProviderDetails.ContactNum</h6>
                                                            <input asp-for="ProviderDetails.ContactNum" type="tel" inputmode="tel" class="form-control field-input d-none" />
                                                            <span asp-validation-for="ProviderDetails.ContactNum" class="text-danger small"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Address -->
                                            <div class="col-12">
                                                <div class="card border h-100">
                                                    <div class="card-body">
                                                        <h3 class="h6 mb-3"><i class="bi bi-geo-alt-fill me-2"></i>Address</h3>

                                                        <div class="mb-3">
                                                            <label asp-for="ProviderDetails.Address" class="form-label" style="font-weight:bold">Street Address <span class="text-danger field-input d-none">*</span></label>
                                                            <h6 asp-for="ProviderDetails.Address" class="form-label field-label margin-left-20">@Model.ProviderDetails.Address</h6>
                                                            <input asp-for="ProviderDetails.Address" class="form-control field-input d-none" />
                                                            <span asp-validation-for="ProviderDetails.Address" class="text-danger small"></span>
                                                        </div>

                                                        <div class="row g-3">
                                                            <div class="col-md-6">
                                                                <label asp-for="ProviderDetails.State" class="form-label" style="font-weight:bold">State <span class="text-danger field-input d-none">*</span></label>
                                                                <h6 asp-for="ProviderDetails.State" class="form-label field-label margin-left-20">@Model.ProviderDetails.State</h6>
                                                                <input asp-for="ProviderDetails.State" class="form-control field-input d-none" />
                                                                <span asp-validation-for="ProviderDetails.State" class="text-danger small"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- One simple submit -->
                                        <div class="d-flex justify-content-end gap-2 mt-4">
                                            <button type="submit" id="btnSave" class="btn btn-primary d-none">Save</button>
                                            <button type="button" id="btnEdit" class="btn btn-primary">Edit</button>
                                            <button type="button" id="btnCancel" class="btn btn-primary d-none">Cancel</button>
                                        </div>
                                    </form>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
                @* </main> *@
                <!-- End Hero-->
            </section>
            <!-- End Hero-->
        </main>
    </div>

    <!-- ======= Back to Top =======-->
    <button id="back-to-top"><i class="bi bi-arrow-up-short"></i></button>
    <!-- End Back to top-->
    <!-- ======= Javascripts =======-->
    <script src="/vendors/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="/vendors/gsap/gsap.min.js"></script>
    <script src="/vendors/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="/vendors/isotope/isotope.pkgd.min.js"></script>
    <script src="/vendors/glightbox/glightbox.min.js"></script>
    <script src="/vendors/swiper/swiper-bundle.min.js"></script>
    <script src="/vendors/aos/aos.js"></script>
    <script src="/vendors/purecounter/purecounter.js"></script>
    <script src="/js/custom.js"></script>
    <script src="/js/send_email.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const btnEdit = document.getElementById("btnEdit");
            const btnSave = document.getElementById("btnSave");
            const btnCancel = document.getElementById("btnCancel");

            const labels = document.querySelectorAll(".field-label");
            const inputs = document.querySelectorAll(".field-input");

            btnEdit.addEventListener("click", () => {
                labels.forEach(l => l.classList.add("d-none"));
                inputs.forEach(i => i.classList.remove("d-none"));

                btnEdit.classList.add("d-none");
                btnSave.classList.remove("d-none");
                btnCancel.classList.remove("d-none");
            });

            btnCancel.addEventListener("click", () => {
                inputs.forEach(i => i.classList.add("d-none"));
                labels.forEach(l => l.classList.remove("d-none"));

                btnEdit.classList.remove("d-none");
                btnSave.classList.add("d-none");
                btnCancel.classList.add("d-none");
            });
        });
    </script>
    <!-- End JavaScripts-->
</body>
</html>
